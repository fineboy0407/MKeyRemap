        <Rectangle x:Name="Key4" RadiusX="10" RadiusY="10" Height="70" Width="80" Fill="#FF292C31" Canvas.Left="363" Canvas.Top="89" MouseLeftButtonDown="Key4_MouseLeftButtonDown" Stroke="#FF34373B"/>
        <Viewbox Height="30" Canvas.Left="368" Canvas.Top="107" Width="71">
