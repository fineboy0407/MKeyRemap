                    </Style.Resources>
                </Style>
            </ListBox.Resources>
        </ListBox>
        <Rectangle x:Name="Key5" RadiusX="10" RadiusY="10" Height="70" Width="80" Fill="#FF292C31" Canvas.Left="453" Canvas.Top="89" MouseLeftButtonDown="Key5_MouseLeftButtonDown" Stroke="#FF34373B"/>
        <Viewbox Height="30" Canvas.Left="458" Canvas.Top="107" Width="71">
            <TextBlock x:Name="Key5Text" IsHitTestVisible="False" TextWrapping="Wrap" Text=" "  FontSize="18" Foreground="White" Canvas.Left="49" Canvas.Top="114"/>
        </Viewbox>
        <ListBox x:Name="Key5DropDown" Visibility="Visible" BorderThickness="1,0,1,1" ScrollViewer.HorizontalScrollBarVisibility="Disabled"  Height="164" Canvas.Left="453" Canvas.Top="149" Width="80" BorderBrush="#FF34373B" Background="#FF292C31" Foreground="White" SelectionChanged="Key5DropDown_SelectionChanged">
            <ListBox.Resources>
                <Style TargetType="{x:Type ListBox}">
                    <Style.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0,0,5,5"/>
